<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Create a new Campground</h1>
        
        <div style="width: 30%; margin: 30px auto;">
            <form action="/campgrounds" method="POST">

                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Name" name="name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Image URL" name="image">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" step="any" min="0" placeholder="Price/night" name="price">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" step="any" placeholder="Latitude" name="lat">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" step="any" placeholder="Longitude" name="long">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" step="any" min="1" max="5" placeholder="Rating" name="rating">
                </div>
                <div class="form-group">
                    <textarea class="form-control" type="text" placeholder="Description" name="description"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-default btn-block btn-primary">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
            
    </div>
</div>

<%- include("../partials/footer") %>